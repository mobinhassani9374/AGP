@using AGP.Domain.ViewModel.Game
@model GameViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-controller="Game" asp-action="Edit" asp-area="Admin" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"/>
    <p>نام(حروف انگلیسی) : <input type="text" asp-for="Name" required /></p>
    <p>نام نمایشی(فارسی) : <input type="text" asp-for="DisplayName" required /></p>
    <p>عکس های آپلود شده برای این بازی</p>
    @if (Model.Images.Count == 0)
    {
        <p style="color:red;">عکسی تاکنون آپلود نکرده اید</p>

    }
    else
    {
        <div>
            @foreach (var item in Model.Images)
            {
                <p>
                    <img src="~/Attachment/@(item.ImageName)" style="width:100px;height:100px;" />
                    <label>حذف این عکس <input type="checkbox" name="deleteImages" value="@(item.Id)" /></label>
                </p>
            }
        </div>

    }
    <p>عکس های جدید</p>
    <p>عکس های بازی را انتخاب کنید : <input type="file" name="files" multiple /></p>
    <p>توجه کنید که حجم عکس های بازی برای آپلود نباید بیش از @ViewBag.GameIamgeMaxFileSize کیلوبایت باشند</p>
    <input type="submit" value="اضافه نمودن" />

</form>


