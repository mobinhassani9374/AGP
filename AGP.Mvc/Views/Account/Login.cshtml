@using AGP.Domain.ViewModel.Account
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<form method="post" asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="All"></div>
    <p>Email : <input type="text" asp-for="Email" /></p>
    <p>Password : <input type="password" asp-for="Password" /></p>
    <input type="hidden" asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <input type="submit" value="Register" />
</form>

