@using AGP.Domain.ViewModel.AccountGame
@using AGP.Utility.ExtensionMethods
@model AccountGameViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AccountDetail</title>
</head>
<body>
    <table>
        <tr>
            <td>نام بازی</td>
            <td>@Model.GameDisplayName</td>
        </tr>
        <tr>
            <td>قیمت(تومان)</td>
            <td>@Model.Price.ToString("#,##")</td>
        </tr>
        <tr>
            <td>سطح</td>
            <td>@Model.Level</td>
        </tr>
        <tr>
            <td>توضیحات</td>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <td>تاریخ ایجاد</td>
            <td>@Model.CreateDate.ToShortTime()</td>
        </tr>
        <tr>
            <td>وضعیت اکانت</td>
            <td>
                @if (Model.State == 1)
                {
                    <span>درحال بررسی</span>
                }
                else if (Model.State == 2)
                {
                    <span>تایید شده</span>
                }
                else
                {
                    <span>رد شده</span>
                }
            </td>
        </tr>
        @if (Model.State == 3)
        {
            <tr>
                <td>دلیل رد اکانت</td>
                <td>@Model.ReasonForCancel</td>
            </tr>

        }
        <tr>
            <td>فعال یا غیر فعال</td>
            <td>
                @if (Model.IsActive)
                {
                    <span>فعال</span>

                }
                else
                {
                    <span>غبرفعال</span>

                }
            </td>
        </tr>
        @if (Model.IsDeActiveByAdmin && !Model.IsActive)
        {
            <tr>
                <td>دلیل غیرفعال شدن اکانت توسط مدیرسایت</td>
                <td>@Model.ReasonForDeActiveByAdmin</td>
            </tr>
        }
        <tr>
            <td>تاریخ درخواست خرید</td>
            <td>
                @if (Model.RequestDate.HasValue)
                {
                    <span>@Model.RequestDate.Value.ToShortTime()</span>

                }
                else
                {
                    <span>---</span>

                }
            </td>
        </tr>
        @if (Model.IsDone)
        {
            <tr>
                <td>تاریخ فروش اکانت</td>
                <td>@Model.BuyDate.Value.ToShortTime()</td>
            </tr>
        }

    </table>
</body>
</html>
