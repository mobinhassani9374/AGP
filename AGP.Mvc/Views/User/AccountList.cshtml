@using AGP.Domain.ViewModel.AccountGame
@model List<AccountGameViewModel>
@{
    ViewData["Title"] = "AccountList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 1;
}

<table>
    <thead>
        <tr>
            <th>ردیف</th>
            <th>نام بازی</th>
            <th>سطح </th>
            <th>تاریخ بار گزاری</th>
            <th>قیمت </th>
            <th>وضعیت </th>
            <th>وضعیت خرید </th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fa-iransansdn">@(count++)</td>
                <td>@item.GameDisplayName </td>
                <td class="fa-iransansdn">@item.Level</td>
                <td class="fa-iransansdn">@item.CreateDate</td>
                <td class="seperator color-black">@item.Price</td>
                <td>
                    @if (item.State == 1)
                    {
                        <span class="text-warning">در حال بررسی</span>
                    }
                    else if (item.State == 2)
                    {
                        <span class="text-success">تایید شده</span>
                    }
                    else
                    {
                        <span class="text-danger">رد شده است</span>
                    }
                </td>
                <td class="text-info">
                    @if (item.BuyState == 1)
                    {

                    <span>هنوز به فروش نرسیده است</span>
                    }
                    else if (item.BuyState == 2)
                    {

                    <span>یک درخواست خرید برای اکانت وجود دارد</span>
                    }
                    else if (item.BuyState == 3)
                    {
                    <span>درخواست خرید ناموفق</span>

                    }
                    else
                    {
                    <span>به فروش رسید</span>

                    }
                </td>
                <td>
                    <a data-toggle="tooltip" title="ویرایش" href="#"><i class="pe-7s-edit size-20"></i></a>
                    <a data-toggle="tooltip" class="delete" title="حذف "><i class="pe-7s-trash size-20"></i></a>
                    <a data-toggle="tooltip" data-width="980" data-height="500" title="مشاهده جزئیات" href="http://mahdi.ferdows110.ir" class="fancybox fancybox.iframe"><i class="pe-7s-info size-20"></i></a>
                </td>
            </tr>

        }

    </tbody>
</table>

